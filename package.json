{
  "name": "lokijs",
  "version": "1.5.12",
  "description": "A fork of LokiJS: Fast document oriented javascript in-memory database",
  "homepage": "https://techfort.github.io/LokiJS/",
  "main": "src/lokijs.js",
  "directories": {
    "example": "examples"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cfu288/LokiJS"
  },
  "keywords": [
    "javascript",
    "document-oriented",
    "mmdb",
    "json",
    "nosql",
    "lokijs",
    "in-memory",
    "indexeddb"
  ],
  "scripts": {
    "lint": "eslint . --ext .ts || exit 0",
    "format": "prettier src/**/*.ts spec/**/*.ts -w",
    "typecheck": "tsc --noEmit",
    "test:browser:old": "karma start karma.conf.js --single-run",
    "test:browser": "web-test-runner spec/**/*.ts --node-resolve",
    "test:node:old": "istanbul cover --dir coverage/nodejs node_modules/jasmine/bin/jasmine.js",
    "test:node": "jest --config jest.config.ts spec/*.ts --silent=false",
    "test:incrementalidb": "npm run build && cp src/incremental-indexeddb-adapter.js spec/incrementalidb/build && cp -r build/ spec/incrementalidb/build && serve spec/incrementalidb",
    "pretest": "npm run build:only",
    "test": "npm run test:node && npm run test:browser",
    "build": "node esbuild.js",
    "build:only": "node esbuild.js",
    "postbuild:old": "karma start karma.build.conf.js --single-run",
    "postbuild": "jest --config jest.config.ts spec/*.ts --silent=false",
    "prebuild": "npm run format && npm run typecheck",
    "prepublish": "npm run build",
    "clean": "rimraf build/* coverage/*",
    "pour:beer": "echo New npm version published, one beer for you !",
    "jsdoc": "./node_modules/.bin/jsdoc -c jsdoc-conf.json",
    "benchmark": "node benchmark/benchmark"
  },
  "author": "Joe Minichino <joe.minichino@gmail.com>",
  "contributors": [
    {
      "name": "Dave",
      "email": "github@obeliskos.com"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/techfort/LokiJS/issues"
  },
  "devDependencies": {
    "@types/jasmine": "^4.3.2",
    "@types/jest": "^29.5.1",
    "@types/jquery": "^3.5.16",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "@web/dev-server-esbuild": "^0.4.1",
    "@web/test-runner": "^0.16.1",
    "@web/test-runner-playwright": "^0.10.0",
    "esbuild": "0.17.19",
    "esbuild-plugin-d.ts": "^1.1.0",
    "eslint": "^8.41.0",
    "istanbul": "^0.4.4",
    "jasmine": "^2.4.1",
    "jest": "^29.5.0",
    "jest-browser-globals": "^25.1.0-beta",
    "jsdoc": "^3.5.5",
    "mocha": "^2.5.3",
    "puppeteer": "^20.4.0",
    "rimraf": "^2.5.4",
    "serve": "^14.2.0",
    "should": "^4.6.5",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "jquery": "^3.7.0"
  }
}
